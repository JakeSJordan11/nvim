syntax on
filetype plugin indent on
"set guicursor=
set relativenumber
set nohlsearch
set hidden
set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nu
set nowrap
set smartcase
set incsearch
set termguicolors
set scrolloff=8
set noshowmode
set completeopt=menuone,noinsert,noselect
set signcolumn=yes
" set cmdheight=2
set updatetime=50
set shortmess+=c
set colorcolumn=80
set shell=pwsh.exe
 set splitbelow
 set splitright
" set cursorline
set showmatch

call plug#begin('~/AppData/Local/nvim/plugged')

Plug 'preservim/nerdtree'
Plug 'gruvbox-community/gruvbox'
Plug 'vim-airline/vim-airline'
Plug 'ryanoasis/vim-devicons'

call plug#end()

colorscheme gruvbox
set background=dark

highlight ColorColumn ctermbg=0 guibg=grey
highlight Normal guibg=none
highlight LineNr guifg=#5eacd3

" Open nerd tree when no file is specified
autocmd StdinReadPre * let s:std_in=1
autocmd VimEnter * if argc() == 0 && !exists("s:std_in") | NERDTree | endif

let NERDTreeMinimalUI = 1
let NERDTreeDirArrows = 1
let NERDTreeQuitOnOpen = 1
let NERDTreeIgnore = []
let NERDTreeStatusline = ''

nnoremap <space> <nop>
let mapleader=" "
let maplocalleader=" "
"nnoremap <leader>cd :cd %:p:h<CR>:pwd<CR>

nnoremap <leader>t :NERDTreeToggle<cr>

" use alt+hjkl to move between split/vsplit panels
tnoremap <A-h> <C-\><C-n><C-w>h
tnoremap <A-j> <C-\><C-n><C-w>j
tnoremap <A-k> <C-\><C-n><C-w>k
tnoremap <A-l> <C-\><C-n><C-w>l
nnoremap <A-h> <C-w>h
nnoremap <A-j> <C-w>j
nnoremap <A-k> <C-w>k
nnoremap <A-l> <C-w>l

" TODO toggle terminal
" nnoremap <leader>`1 <c-w>s <c-w>w :resize 10<cr> :terminal<cr> 
" \:set nonumber<cr> :set norelativenumber<cr> :file terminal 1<cr> i


" yank current word
nnoremap <leader>v viwy

" move current line up or down
nnoremap - :move +1<CR>
nnoremap = :move -2<CR>

" TODO toggle comments on and off
" TODO should be using autocommand groups augroup
" comment line
autocmd FileType vim nnoremap <buffer> <localleader>/ I" <esc>
autocmd FileType javascriptreact nnoremap <buffer> <localleader>/ I//<esc>
autocmd FileType javascript nnoremap <buffer> <localleader>/ I//<esc>
autocmd FileType typescript nnoremap <buffer> <localleader>/ I//<esc>
autocmd FileType typescriptreact nnoremap <buffer> <localleader>/ I//<esc>
autocmd FileType rust nnoremap <buffer> <localleader>/ I//<esc>
autocmd FileType python nnoremap <buffer> <localleader>/ I#<esc>


nnoremap <leader>ev :vsplit $MYVIMRC<cr>
nnoremap <leader>sv :source $MYVIMRC<cr>

" sorround current word in "
nnoremap <leader>" viw<esc>a"<esc>bi"<esc>lel

" snippets
" TODO edit to my liking
autocmd FileType javascript :iabbrev <buffer> iff if ()<left>


